<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connectu.activity" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.connectu.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.connectu.activity.FirstTabActivity"
            android:label="@string/title_activity_first_tab" >
        </activity>
        <activity
            android:name="com.connectu.activity.SecondTabActivity"
            android:label="@string/title_activity_second_tab" >
        </activity>
        <activity
            android:name="com.connectu.activity.ThirdTabActivity"
            android:label="@string/title_activity_third_tab" >
        </activity>
        <activity
            android:name="com.connectu.activity.FourthTabActivity"
            android:label="@string/title_activity_fourth_tab" >
        </activity>
        <activity
            android:name="com.connectu.activity.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.connectu.activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.connectu.activity.JoinActivity"
            android:label="@string/title_activity_join" >
        </activity>
    </application>

</manifest>
